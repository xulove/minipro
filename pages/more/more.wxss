@import "../../colorui.wxss";
.mine .avtar {
  width: 100%;
  height: 100px;
  border-radius: 50%;
  overflow: hidden;
  display: flex;
  justify-content: center;
  align-items: center;
}
.mine .nickname{
  width: 100%;
  height: 40px;
  overflow: hidden;
  display: flex;
  justify-content: center;
  align-items: center;
}
.mine .avtar >image {
  width: 80px;
  height: 80px;
  border-radius: 50%;
}

.mine .data-types{
  display: flex;
  width: 750rpx;
}

.mine .data-types .type-item{
  flex: 1;
  line-height: 2rem;
  text-align: center;
}

.mine .data-types .type-item .title{
  font-size: 16px;
  color: #aaa;
}
/*上部的样式*/
.user {
  display: flex;
  flex-direction: row;
  justify-content: center;
  width: 750rpx;
  padding: 10rpx 15rpx;
  background: #fff;
  border: 1px solid #eee;
  box-shadow: 0 2px 5px #eeeeee;
}

.my {
  display: flex;
  width: 750rpx;
  flex-direction: column;
  align-items: center;
  border-top: solid 1px #ebebeb;
  /*border-bottom: solid 2px #ebebeb;*/
  margin: 10rpx 0;
  box-shadow: 0 2px 5px #ebebeb;
}
.my .list-box{
  width: 750rpx;
}
.my .list-li{
  height: 130rpx;
}
.my .list-text{
  color: #aaa;
  /*color:#5db85d;*/

}