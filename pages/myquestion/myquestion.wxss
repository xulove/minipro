/*提问的问题*/
.questionitem{
    padding: 25rpx;
    margin-bottom: 25rpx;
    width: 660rpx;
    border: 1px solid rgba(220, 220, 220, 1);
    box-shadow:0px 5px 10px 0px rgba(220, 220, 220, 1);
}
.userinfo{
    display: flex;
    flex-direction: row;
    padding-bottom: 10px;
}
.userinfo image{
    width: 20px;
    height: 20px;
    border: 1px solid #ccc;
}
.userinfo text{
    display: block;
    margin-left: 15px;
    color: grey;
    font-size: 12px;
    font-family: SFUIText-regular;
    height: 20px;
    line-height: 20px;
}
.questiontitle{
    padding-bottom: 10px;

}
.questiontitle text{
    font-size: 15px;
    text-align: left;
    font-family: SFUIText-regular;
    color: #8F8E94 100%;
}
.questionstat text{
    color: grey;
    font-size: 10px;
    text-align: left;
    font-family: SFUIText-regular;
}